<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.new_detail.NewDetailFragment"
    android:background="@color/white"
    android:padding="2dp">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_header_fragment_new_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back_fragment_new_detail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:background="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_is_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_favorite_border_24"
            android:background="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_is_favorite"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_ios_share_24"
            android:background="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_new_detail"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@id/container_header_fragment_new_detail"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_new_title_new_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_new_detail"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        tools:text="Lorem ipsum dolor sit amet, consectetur,adipisicing elit, sed do elusmod tempor"
        android:textColor="@color/black"
        />
    <!-- Author-Date Info -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_author_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_new_title_new_detail_fragment"
        android:paddingVertical="20dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_author"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="40dp"
            android:src="@drawable/baseline_create_24"/>
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_author"
            app:layout_constraintBottom_toBottomOf="@id/iv_author"
            app:layout_constraintStart_toEndOf="@id/iv_author"
            android:textColor="@color/black"
            tools:text="Author name"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_date"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toEndOf="@id/tv_author"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="60dp"
            android:src="@drawable/baseline_calendar_month_24"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_date"
            app:layout_constraintBottom_toBottomOf="@id/iv_date"
            app:layout_constraintStart_toEndOf="@id/iv_date"
            android:textColor="@color/black"
            tools:text="03.08.2020"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Description ScrollView -->
    <ScrollView
        android:id="@+id/scrollview_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/container_author_date"
        app:layout_constraintBottom_toTopOf="@id/btn_news_source"
        android:layout_marginBottom="5dp"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_new_full_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            tools:text="Full description goes here..."
            android:textColor="@color/black" />
    </ScrollView>
    <Button
        android:id="@+id/btn_news_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_source"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:paddingHorizontal="60dp"
        android:textColor="@color/black"
        android:background="@drawable/button_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>